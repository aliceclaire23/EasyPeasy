<div id="<%= dom_id ingredient %>">
  <p>
    <strong>Name:</strong>
    <%= ingredient.name %>
  </p>

  <p>
    <strong>Quantity:</strong>
    <%= ingredient.quantity %>
  </p>

  <p>
    <strong>Unit:</strong>
    <%= ingredient.unit %>
  </p>

  <p>
    <strong>Recipe:</strong>
    <%= ingredient.recipe ? link_to(ingredient.recipe.name, ingredient.recipe) : "No recipe assigned" %>
  </p>

</div>
